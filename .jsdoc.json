{
  "source": {
    "include": ["main.js", "lib"]
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "destination": "./docs/",
    "recurse": true,
    "readme": "README.md"
  },
  "templates": {
    "systemName": "Chalkbars",
    "copyright": "2015 and above Shogun <shogun@cowtech.it>",
    "includeDate": false,
    "navType": "vertical",
    "theme": "sandstone",
    "linenums": true,
    "collapseSymbols": false,
    "inverseNav": true,
    "syntaxTheme": "dark",
    "sort": false
  }
}
