{
  "name": "chalkbars",
  "version": "1.0.0",
  "description": "Template based terminal coloring based on Chalk and Handlebars.",
  "main": "main.js",
  "files": [
    "main.js",
    "lib",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "postpublish": "git tag -f v-$npm_package_version",
    "test": "./node_modules/.bin/mocha",
    "posttest": "./node_modules/.bin/eslint main.js lib/*.js",
    "coverage": "./node_modules/.bin/mocha --require blanket -R html-cov > coverage.html; true",
    "travis-ci": "./node_modules/.bin/mocha --require blanket -R mocha-lcov-reporter | ./node_modules/coveralls/bin/coveralls.js; true",
    "docs": "./node_modules/.bin/jsdoc -c jsdoc.conf"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShogunPanda/chalkbars"
  },
  "keywords": [
    "chalk",
    "handlebars",
    "terminal",
    "colors"
  ],
  "author": "Shogun <shogun@cowtech.it>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShogunPanda/chalkbars/issues"
  },
  "homepage": "https://github.com/ShogunPanda/chalkbars",
  "dependencies": {
    "chalk": "^1.0.0",
    "handlebars": "^3.0.0"
  },
  "devDependencies": {
    "blanket": "^1.1.6",
    "coveralls": "^2.11.2",
    "eslint": "^0.16.1",
    "expect.js": "^0.3.1",
    "jsdoc": "^3.3.0-beta2",
    "mocha": "~2.1.0",
    "mocha-lcov-reporter": "0.0.2",
    "sinon": "^1.13.0"
  },
  "config": {
    "blanket": {
      "pattern": [
        "main.js",
        "lib"
      ],
      "data-cover-never": "node_modules"
    }
  }
}
