{
  "name": "chalkbars",
  "version": "0.3.0",
  "description": "Template based terminal coloring based on Chalk and Handlebars.",
  "main": "main.js",
  "files": [
    "main.js",
    "lib",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "mocha",
    "coverage": "mocha --require blanket -R html-cov > coverage.html; true",
    "posttest": "eslint main.js lib/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShogunPanda/chalkbars"
  },
  "keywords": [
    "chalk",
    "handlebars",
    "terminal",
    "colors"
  ],
  "author": "Shogun <shogun@cowtech.it>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShogunPanda/chalkbars/issues"
  },
  "homepage": "https://github.com/ShogunPanda/chalkbars",
  "dependencies": {
    "chalk": "^0.5.1",
    "handlebars": "^2.0.0"
  },
  "devDependencies": {
    "blanket": "^1.1.6",
    "eslint": "^0.16.1",
    "expect.js": "^0.3.1",
    "mocha": "~2.1.0",
    "sinon": "^1.13.0"
  },
  "config": {
    "blanket": {
      "pattern": ["main.js", "lib"],
      "data-cover-never": "node_modules"
    }
  }
}
